<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel>
			<g:FlexTable ui:field="recipes" styleName="FlexTable"/>
			<g:HorizontalPanel ui:field="addPanel">
			<g:TextBox ui:field="recipeID" width="54px" height="23px"></g:TextBox>
			<g:TextBox ui:field="name" width="204px" height="23px"></g:TextBox>
			<g:TextBox ui:field="ingredients" width="404px" height="23px"></g:TextBox>
			<g:TextBox ui:field="description" width="404px" height="23px"></g:TextBox>
			<g:TextBox ui:field="userID" width="54px" height="23px"></g:TextBox>
			<g:Button ui:field="addRecipe">Add</g:Button>
			</g:HorizontalPanel>
			<g:HorizontalPanel ui:field="deletePanel"> 
			<g:Label ui:field="deleteLabel" text="Enter id of recipe to delete: ">  </g:Label>
			<g:TextBox ui:field="idToDelete" width="50" height="23px"> </g:TextBox>
			<g:Button ui:field="deleteRecipe">Delete</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 